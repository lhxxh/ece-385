int main()
{
	int i = 0;
	int j = 0;
	unsigned int bitmask;
	unsigned int temp;
	int flag = 0;
	unsigned int switch_number;
	volatile unsigned int *LED_PIO = (unsigned int*)0x70; //make a pointer to access the PIO block
	volatile unsigned int *SW_PIO = (unsigned int*) 0x60;
	volatile unsigned int *BUTTON_PIO = (unsigned int*) 0x50;

	*LED_PIO = 0; //clear all LEDs
	while ( (1+1) != 3) //infinite loop
	{

//		for (i = 0; i < 100000; i++); //software delay
//		*LED_PIO |= 0x2; //set LSB
//		for (i = 0; i < 100000; i++); //software delay
//		*LED_PIO &= ~0x2; //clear LSB
//
//		temp=~(*BUTTON_PIO);
//		if(temp == 0xFFFFFFF8){
//		*LED_PIO |= 0x1; //set LSB
//		}
//		else{
//		*LED_PIO &= ~0x1;
//		}
////		*BUTTON_PIO = 0xF;
//		unsigned int temp=0x01;
//		for(i=0;i<8;i++){                     // switch
//			if((*SW_PIO) & bitmask != 0){
//				switch_number+=;
//			}
//			bitmask<<1;
//		}

		flag=0;
		while(*BUTTON_PIO == 0x7 ){
			flag=1;
		}
		if(flag == 1){
			*LED_PIO+=*SW_PIO;
			flag = 0;
		}
		if(*LED_PIO == 0x100)
			*LED_PIO == 0x00;
		if(*LED_PIO > 0xFF){
			*LED_PIO %=0x100 ;
		}
		if(*BUTTON_PIO == 0xB){
			*LED_PIO = 0x00;
		}
		for (i = 0; i < 100000; i++); //software delay
			*LED_PIO |= 0xFF; //set LSB
		for (i = 0; i < 100000; i++); //software delay
			*LED_PIO &= ~0xFF; //clear LSB


	}
	return 1; //never gets here



}
